<html>
  <head>
    <meta charset="UTF-8" />
    <title>Clarity Ritual</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        margin: 0;
        padding: 0;
        height: 100vh;
        background-color: #111;
        color: #eee;
        font-family: Georgia, serif;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }

      h1 {
        margin-bottom: 2rem;
      }

      .breath-text {
        font-size: 3rem;
        opacity: 1;
        transition: opacity 0.5s ease-in-out;
      }

      .fade {
        opacity: 0.3;
      }

      .controls {
        margin-top: 2rem;
        font-size: 1rem;
      }

      a {
        color: cyan;
        text-decoration: none;
        margin-top: 2rem;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <h1>Clarity Ritual</h1>
    <div id="breathText" class="breath-text">Inhale</div>

    <div class="controls">
      <button id="toggleSound">ðŸ”Š Sound: On</button>
    </div>

    <a href="/">Return to Gateway</a>

    <audio id="inhaleSound" src="/sounds/inhale.mp3" preload="auto"></audio>
    <audio id="exhaleSound" src="/sounds/exhale.mp3" preload="auto"></audio>

    <script>
      const breathText = document.getElementById("breathText");
      const inhaleSound = document.getElementById("inhaleSound");
      const exhaleSound = document.getElementById("exhaleSound");
      const toggleSound = document.getElementById("toggleSound");

      const phases = ["Inhale", "Hold", "Exhale", "Hold"];
      let index = 0;
      let soundEnabled = true;

      toggleSound.onclick = () => {
        soundEnabled = !soundEnabled;
        toggleSound.textContent = soundEnabled ? "ðŸ”Š Sound: On" : "ðŸ”‡ Sound: Off";
      };

      setInterval(() => {
        const phase = phases[index];
        breathText.classList.add("fade");

        setTimeout(() => {
          breathText.textContent = phase;
          breathText.classList.remove("fade");

          if (soundEnabled) {
            if (phase === "Inhale") inhaleSound.play();
            if (phase === "Exhale") exhaleSound.play();
          }

          index = (index + 1) % phases.length;
        }, 500);
      }, 4000);
    </script>
  </body>
</html>

