---
const { title, description, backgroundImage } = Astro.props;
---

<html lang="en">
  <head>
    <title>{title ? title + " â€“ Hollow Light Ritual" : "Hollow Light Ritual"}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        min-height: 100vh;
        margin: 0;
        background: url({backgroundImage || '/images/hollowingbg.png'}) center center / cover no-repeat fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
      }
      .ritual-container {
        background: rgba(255,255,255,0.92);
        border-radius: 2rem;
        box-shadow: 0 4px 32px rgba(92, 72, 254, 0.08);
        padding: 2.5rem 2rem;
        margin: 2rem;
        max-width: 700px;
        width: 100%;
      }
      .ritual-description {
        font-size: 1.15rem;
        color: #444;
        margin-bottom: 1rem;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <main class="ritual-container">
      {title && <h1 style="text-align:center;margin-bottom:0.5rem">{title}</h1>}
      {description && <div class="ritual-description">{description}</div>}
      <slot />
    </main>
  </body>
</html>
